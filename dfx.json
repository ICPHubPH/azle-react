{
    "canisters": {
        "backend": {
            "type": "custom",
            "main": "src/backend/backend.ts",
            "candid": "src/backend/backend.did",
            "build": "npx azle --native-compilation backend",
            "wasm": ".azle/backend/backend.wasm",
            "gzip": true,
            "assets": [
                [
                    "src/frontend/dist",
                    "dist"
                ]
            ],
            "build_assets": "npm run build",
            "metadata": [
                {
                    "name": "candid:service",
                    "path": "src/backend/backend.did"
                },
                {
                    "name": "cdk:name",
                    "content": "azle"
                }
            ]
        }
    },
    "output_env_file": ".env"
}